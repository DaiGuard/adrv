<?xml version="1.0" ?>
<robot name="wheel" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="wheel" params="name pose_xyz pose_rpy">

    <link name="${name}_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://adrv_description/meshes/wheel_link.dae" />          
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://adrv_description/meshes/wheel_link.dae" />          
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" />
        <mass value="1.0" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                           iyy="1.0" iyz="0.0"
                                     izz="1.0" />
      </inertial>
    </link>

    <gazebo reference="${name}_link">
      <mu1 value="1.0" />
      <mu2 value="1.0" />
      <kp  value="100000000.0" />
      <kd  value="1.0" />
      <fdir1 value="1 0 0" />
    </gazebo>

    <joint name="${name}_joint" type="continuous">
      <parent link="base_link" />
      <child link="${name}_link" />
      <origin xyz="${pose_xyz}" rpy="${pose_rpy}" />
      <axis xyz="1 0 0" rpy="0 0 0" />
    </joint>      

    <transmission name="${name}_trans" type="SimpleTransmission">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="${name}_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
      <joint name="${name}_joint">
        <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      </joint>
    </transmission>

  </xacro:macro>

</robot>
